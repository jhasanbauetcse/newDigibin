<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/admin_signup_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".SignupAdmin">

    <RelativeLayout
        android:id="@+id/admin_signup_content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/softgreen">

        <ImageView
            android:id="@+id/admin_signup_header_logo"
            android:layout_width="252dp"
            android:layout_height="229dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/cleanups"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/admin_signup_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/admin_signup_header_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/braah_one"
            android:gravity="center"
            android:text="Sign Up Here"
            android:textColor="@color/green"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/admin_signup_name_input"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_below="@id/admin_signup_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:padding="10dp"
            android:background="@drawable/edittext"
            android:drawableLeft="@android:drawable/ic_menu_myplaces"
            android:drawablePadding="10dp"
            android:hint="Name"
            android:inputType="text"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/admin_signup_email_input"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_below="@id/admin_signup_name_input"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:padding="10dp"
            android:background="@drawable/edittext"
            android:drawableLeft="@android:drawable/ic_dialog_email"
            android:drawablePadding="10dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/admin_signup_password_input"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_below="@id/admin_signup_email_input"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext"
            android:padding="10dp"
            android:drawableLeft="@android:drawable/ic_lock_idle_lock"
            android:drawablePadding="10dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/admin_signup_submit_button"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/admin_signup_password_input"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:background="@drawable/box_green"
            android:text="Create Account"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/admin_signup_existing_account_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/admin_signup_submit_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            android:gravity="center"
            android:text="Already Have an Account?"
            android:textColor="@color/green"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/admin_signup_login_cta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/admin_signup_existing_account_prompt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Login"
            android:textColor="@color/green"
            android:textSize="15sp"
            android:textStyle="bold" />

    </RelativeLayout>
</RelativeLayout>